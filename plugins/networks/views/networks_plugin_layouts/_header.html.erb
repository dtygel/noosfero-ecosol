<h1 id="network-header" class="page-title">
  <% if profile.network_node? %>
    <%= profile.hierarchy.map(&:name).join ' :: ' %>

  <% elsif profile.network? %>
    <%= profile.name %>

  <% elsif profile.enterprise? %>
    <span class='solidarity-economy'>Empreendimento de Economia Solid√°ria</span>
    <%= profile.short_name 40 %>

    <% profile.networks.each do |network| %>
      <span class="network-tag">
        <%= link_to profile_image(network, :icon) + network.name, network.url %>
      </span>
    <% end %>
  <% end %>
</h1>
