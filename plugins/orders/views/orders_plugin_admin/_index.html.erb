<h1> <%= t('orders_plugin.lib.plugin.panel_button') %> </h1>

<%= button :back, _('Back to control panel'), :controller => 'profile_editor' %>

<div class='ui-tabs'>
  <ul>
    <% if profile.purchases.present? %>
      <li class='tab'><a href='#purchases'><%= t('orders_plugin.terms.purchase.plural') %></a></li>
    <% end %>
    <% if profile.sales.present? %>
      <li class='tab'><a href='#sales'><%= t('orders_plugin.terms.sale.plural') %></a></li>
    <% end %>
  </ul>

  <% if profile.purchases.present? %>
    <div id='purchases'>
      <%= render 'orders_plugin_admin/table', :orders => profile.purchases, :wireframe_size => false %>
    </div>
  <% end %>

  <% if profile.sales.present? %>
    <div id='sales'>
      <%= render 'orders_plugin_admin/table', :orders => profile.sales, :wireframe_size => false %>
    </div>
  <% end %>
</div>

