<div id="cycle-others">
  <% others = (profile.orders_cycles.open - [cycle]) %>
  <%= ( others.blank? ? t('orders_cycle_plugin.views.cycle._view_header.see_also_all') : t('orders_cycle_plugin.views.cycle._view_header.other_open_cycles_lis') ) % {
    :list => others.map{ |s| link_to(s.name, '') }.join(t('orders_cycle_plugin.views.cycle._view_header., ')),
    :all => link_to(t('orders_cycle_plugin.views.cycle._view_header.all_orders_cycles'), {:controller => :orders_cycle_plugin_order, :action => :index}), } %>
</div>

<div id="cycle-header">
  <h2><%=t('orders_cycle_plugin.views.cycle._view_header.orders_cycle_cycle') % {:cycle => content_tag(:strong, cycle.name_with_code)} %></h2>

  <%= render :partial => 'orders_cycle_plugin_cycle/view_dates', :locals => {:cycle => cycle} %>

  <div class="subtitle"><%= cycle.description %></div>
</div>
