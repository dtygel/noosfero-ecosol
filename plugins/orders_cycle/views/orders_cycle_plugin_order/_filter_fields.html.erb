<%= hidden_field_tag :cycle_id, cycle.id %>
<%= hidden_field_tag :order_id, order.id unless order.nil? %>

<div class="field supplier">
  <label><%= t('orders_cycle_plugin.views.order._filter_products.supplier') %></label>
  <div>
    <%= select_tag :supplier_id, options_for_select([[t('orders_cycle_plugin.views.order._filter_products.all_the_suppliers'), ""]] + supplier_choices(profile), params[:supplier_profile_id].to_i) %>
  </div>
</div>

<div class="field category">
  <label><%= t('suppliers_plugin.views.product.index.category') %></label>
  <div>
    <%= select_tag :category_id, options_for_select(@product_categories.map{ |pc| [pc.name, pc.id]}.insert(0,[t('suppliers_plugin.views.product.index.all_the_categories'), ""])) %>
  </div>
</div>

